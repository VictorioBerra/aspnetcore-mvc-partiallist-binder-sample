@model List<MVCExampleNick.Models.Department>

<hr />

<button type="button" id="addRowBtn" class="btn btn-primary btn-block">Add Row</button>

<div id="rows">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var department = Model[i];
        <div class="row">
            <input name="Departments[@(i)].Id" asp-for="@department.Id" type="hidden"/>   
            <input name="Departments[@(i)].Name" asp-for="@department.Name" />   
        </div>
    }
</div>

<script>        
    $('#addRowBtn').on('click', window.rowCreator);
</script>